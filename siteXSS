    <!-- Input Form -->
    <form id="inputForm">
        <label for="userInput">Enter your input:</label>
        <input type="text" id="userInput" placeholder="Type something here">
        <button type="submit">Submit</button>
    </form>

    <hr>

    <!-- Vulnerable Output -->
    <div>
        <h2>Output:</h2>
        <p id="output"></p>
    </div>

    <footer>
        <p><strong>Note:</strong> This site is for educational purposes only. Do not expose it to the public internet.</p>
